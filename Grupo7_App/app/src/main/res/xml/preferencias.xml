<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="preferencias_principal" >
    <CheckBoxPreference
        android:key="notificaciones"
        android:title="Enviar notificaciones"/>
    <ListPreference
        android:key="volumen"
        android:title="Volumen de la App"
        android:summary="Se escoge el volumen de la aplicación"
        android:entries="@array/tiposDeVolumen"
        android:entryValues="@array/tiposDeSonidos"
        android:defaultValue="1"/>
    <EditTextPreference
        android:key="tabs"
        android:title="Número de Tabs"
        android:summary="En cuantos trozos se dividen los Tabs"
        android:inputType="number"
        android:defaultValue="3"/>
    <PreferenceCategory
        android:title="Modo avión" >
        <CheckBoxPreference
            android:key="Activar"
            android:title="Activar modo avión" />
        <CheckBoxPreference
            android:key="Desactivar"
            android:title="Desactivar modo avión" />

    </PreferenceCategory>

</PreferenceScreen>